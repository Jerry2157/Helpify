<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawable_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NosotrosActivity"
    tools:showIn="@layout/app_bar_nosotros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewDan"
                android:layout_width="108dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dan" />

            <TextView
                android:id="@+id/textViewDan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="José Daniel Alillo Martínez\nA01377358@itesm.mx"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewGerar"
                android:layout_width="212dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gerardo" />

            <TextView
                android:id="@+id/textViewGerardo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Gerardo Ezequiel Magdaleno Hernández\nA01377029@itesm.mx"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCarlos"
                android:layout_width="61dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/textViewCarlos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Carlos Manuel Rivero\nA01371368@itesm.mx"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewAna"
                android:layout_width="76dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ana" />

            <TextView
                android:id="@+id/textViewAna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Ana Paula Mejía Quiroz\nA01377358@itesm.mx"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewBeto"
                android:layout_width="162dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/beto" />

            <TextView
                android:id="@+id/textViewBeto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Jesús Heriberto Vásquez Sánchez\n A01377358@itesm.mx"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>